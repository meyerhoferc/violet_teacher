<%= form_for(@course) do |f| %>
  <%= f.label :subject %>
  <%= f.collection_select :subject_id, Subject.all, :id, :name, {prompt: "Select Subject"} %><br>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.label :location %>
  <%= f.text_field :location %><br>

  <%= f.label :teacher %>
  <%= f.collection_select(:teacher_id, Teacher.all, :id, :name, {prompt: "Select Teacher"}) %><br>

  <%= f.submit %>
<% end %>
