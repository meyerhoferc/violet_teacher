<%= form_for([current_teacher, @course]) do |f| %>
  <%= f.label :subject %>
  <%= f.collection_select :subject_id, Subject.all, :id, :name, {prompt: "Select Subject"} %><br>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.label :location %>
  <%= f.text_field :location %><br>

  <%= f.submit %>
<% end %>
